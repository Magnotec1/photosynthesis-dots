#!/bin/sh

# ┌─┐┌─┐┬─┐┌─┐┌─┐┌┐┌┌─┐┬ ┬┌─┐┌┬┐
# └─┐│  ├┬┘├┤ ├┤ │││└─┐├─┤│ │ │ 
# └─┘└─┘┴└─└─┘└─┘┘└┘└─┘┴ ┴└─┘ ┴ 

# author	Niraj
# github	niraj998

# ┌─┐┌─┐┌┐┌┌─┐┬┌─┐┬ ┬┬─┐┌─┐┌┬┐┬┌─┐┌┐┌┌─┐
# │  │ ││││├┤ ││ ┬│ │├┬┘├─┤ │ ││ ││││└─┐
# └─┘└─┘┘└┘└  ┴└─┘└─┘┴└─┴ ┴ ┴ ┴└─┘┘└┘└─┘

date=$(date '+%y%m%d-%H%M')
# Save Screenshots here
screenshotdir=~/Pictures/Screenshots
# file name
file=$screenshotdir/$date.png
# icon for notification
icon_saved=$screenshotdir/$date.png
icon_copied=~/.config/rofi/screenshot/camera.png
# rofi config
roficonfig=~/.config/rofi/screenshot/config.rasi
#make sure you have directory
[ -d "$screenshotdir" ] || mkdir -pv "$screenshotdir"

# ┬─┐┌─┐┌─┐┬
# ├┬┘│ │├┤ │
# ┴└─└─┘└  ┴

area="󰆞"
cwin="󰆢"
full="󰹑"
copy="󰆏"
save="󰠘"

rofiopt="$area\n$cwin\n$full"
rofi=$(printf "$rofiopt" | rofi -config $roficonfig -dmenu -i )
[ -z "$rofi" ] && exit
option="$save\n$copy"
saveopt=$(printf "$option" | rofi -config $roficonfig -dmenu -i )

case $rofi in
	"$area")
	if [ "$saveopt" = "$copy" ]; then 
	notify-send -i $icon 'Select Area' 'Click to select area.'
	maim -u -m 5 -s | xclip -selection clipboard -t image/png && notify-send -i $icon 'Screenshot copied' 'Screenshot copied to clipboard'  ; paplay /usr/share/sounds/freedesktop/stereo/camera-shutter.oga || notify-send -i $icon 'Failed to take screenshot.'
  elif [ "$saveopt" = "$save" ]; then
	notify-send -i $icon 'Select Area' 'Click to select area.'
	maim -u -m 5 -s $file && notify-send -i $icon 'Screenshot Taken' 'Screenshot saved to ~/Pictures/Screenshots' ; paplay /usr/share/sounds/freedesktop/stereo/camera-shutter.oga || notify-send -i $icon 'Failed to take screenshot.'
	fi
	;;
	"$cwin")
	if [ "$saveopt" = "$copy" ]; then 
	maim -u -m 5 -i "$(xdotool getactivewindow)" | xclip -selection clipboard -t image/png && notify-send -i $icon 'Screenshot copied' 'Screenshot copied to clipboard' ; paplay /usr/share/sounds/freedesktop/stereo/camera-shutter.oga || notify-send -i $icon 'failed to take screenshot'
  elif [ "$saveopt" = "$save" ]; then
	maim -u -m 5 -i "$(xdotool getactivewindow)" $file && notify-send -i $icon 'Screenshot Taken' 'Screenshot saved to ~/Pictures/Screenshots' ; paplay /usr/share/sounds/freedesktop/stereo/camera-shutter.oga || notify-send -i $icon 'Failed to take screenshot.'
	fi
	;;
	"$full")
	if [ "$saveopt" = "$copy" ]; then 
    sleep 2
	maim -u -m 5 | xclip -selection clipboard -t image/png && notify-send -i $icon 'Screenshot copied' 'Screenshot copied to clipboard' ; paplay /usr/share/sounds/freedesktop/stereo/camera-shutter.oga || notify-send -i $icon 'Failed to take screenshot.'
  elif [ "$saveopt" = "$save" ]; then
    sleep 2
	maim -u -m 5 $file && notify-send -i $icon 'Screenshot Taken' 'Screenshot saved to ~/Pictures/Screenshots' ; paplay /usr/share/sounds/freedesktop/stereo/camera-shutter.oga || notify-send -i $icon 'Failed to take screenshot.'
	fi
	;;
esac
